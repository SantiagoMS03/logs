<% layout('layouts/boilerplate') %>
<section class="container">
  <div>
    <h1 class="mt-4">New Piece</h1>
    <form action="/pieces/new" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
      <div class="mb-3">
        <label for="pieceName" class="form-label">Name</label>
        <input type="text" class="form-control" id="pieceName" name="piece[name]" required>
      </div>
      <div class="mb-3">
        <label for="pieceComposer" class="form-label">Composer</label>
        <input type="text" class="form-control" id="pieceComposer" name="piece[composer]" required>
      </div>
      <div class="container mb-3">
        <div class="row">
          <div class="col ps-0">
            <label for="pieceEra" class="form-label">From what era?</label>
            <input type="text" class="form-control" id="pieceEra" name="piece[era]" required>
          </div>
          <div class="col">
            <label for="pieceInstrument" class="form-label">For what instrument?</label>
            <input type="text" class="form-control" id="pieceInstrument" name="piece[instrument]" required>
          </div>
          <div class="col pe-0">
            <label for="pieceLength" class="form-label">How long is it? (in minutes)</label>
            <input type="number" class="form-control" id="pieceLength" name="piece[length]" step="1" required>
          </div>
        </div>
      </div>
      <div class="input-group mb-3">
        <input type="file" class="form-control" id="inputGroupFile02" name="sheetMusic" multiple>
      </div>
      <button type="submit" class="btn btn-piece">Submit</button>
      <form action="/pieces">
        <button type="submit" class="btn btn-piece mx-2">Back</button>
      </form>
    </form>
  </div>
</section>

