<% layout('layouts/boilerplate') %>
<main class="container">
    <h1 class="mt-4">Update Piece</h1>
    <form action="/pieces/<%= piece._id %>?_method=PUT" method="POST" class="validated-form" enctype="multipart/form-data" novalidate>
      <div class="mb-3">
        <label for="pieceName" class="form-label">Name</label>
        <input type="text" class="form-control" id="pieceName" name="piece[name]" value="<%= piece.name %>" required>
      </div>
      <div class="mb-3">
        <label for="pieceComposer" class="form-label">Composer</label>
        <input type="text" class="form-control" id="pieceComposer" name="piece[composer]" value="<%= piece.composer %>" required>
      </div>
      <div class="container mb-3">
        <div class="row">
          <div class="col ps-0">
            <label for="pieceEra" class="form-label">From what era?</label>
            <input type="text" class="form-control" id="pieceEra" name="piece[era]" value="<%= piece.era %>" required>
          </div>
          <div class="col">
            <label for="pieceInstrument" class="form-label">For what instrument?</label>
            <input type="text" class="form-control" id="pieceInstrument" name="piece[instrument]" value="<%= piece.era %>" required>
          </div>
          <div class="col pe-0">
            <label for="pieceLength" class="form-label">How long is it? (in minutes)</label>
            <input type="number" class="form-control" id="pieceLength" name="piece[length]" value="<%= piece.length %>" step="1" required>
          </div>
        </div>
      </div>
      <div class="mb-2">
        Add pdf files to this piece:
      </div>
      <div class="input-group mb-3">
        <input type="file" class="form-control" id="sheetMusic" name="sheetMusic" multiple>
      </div>
      <div class="mb-3">
        <% piece.sheetMusic.forEach(function(sheet, i) { %>
          <div class="form-check-inline me-0">
            <input type="checkbox" id="sheet-<%= i %>" name="deleteSheets[]" value="<%= sheet.filename %>">
          </div>
          <label for="sheet-<%= i %>" class="me-4">Delete PDF <%= i + 1 %> </label>
        <% }) %>        
      </div>
      <div class="mt-3">
        <button type="submit" class="btn btn-piece">Submit</button>
      </div>
    </form>
    <form action="/pieces/<%= piece._id %>">
        <button type="submit" class="btn btn-piece my-3">Back</button>
    </form>
</main>