<% layout('layouts/boilerplate') %>
<div class="text-start w-100 h-100">
    <div class="row container-fluid mx-0 px-0">
      <div class="col d-flex align-items-center justify-content-center">
        <div class="w-75 px-0 mx-0">
            <%- include('../partials/flash') %>
            <div class="text-center">   
                <h1 class="">Register</h1> 
                <h2 class="t-font">Already have an account? <a href="/login" class="a-reset bold">Log In</a></h2>
            </div>
            <div class="d-flex justify-content-center">
                <form action="/register" method="POST" class="validated-form w-100" novalidate>
                    <div class="form-floating my-3 light-bg-form">
                        <input type="text" class="form-control t-font" id="username" name="username" placeholder="Name" required>
                        <label for="username" class="font-brown t-font">Username</label>
                    </div>
                    <div class="form-floating my-3 light-bg-form">
                        <input type="email" class="form-control t-font" id="email" name="email" placeholder="Email" required>
                        <label for="email" class="font-brown t-font">Email</label>
                    </div>
                    <div class="form-floating my-3 light-bg-form">
                        <input type="password" class="form-control t-font" id="password" name="password" placeholder="password" required>
                        <label for="password" class="font-brown t-font">Password</label>
                    </div>
                    <button type="submit" class="btn btn-piece w-100">Register</button>
                </form>
            </div>
        </div>
      </div>
      <div class="col px-0">
        <img src="images/lumber-84678.jpg" alt="logs" class="wood-img img-fluid">
      </div>
    </div>
  </div>
  